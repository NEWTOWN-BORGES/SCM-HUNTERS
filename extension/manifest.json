{
  "manifest_version": 3,
  "name": "SCM HUNTERS",
  "version": "2.1",
  "description": "Ferramenta de análise comunitária de padrões em Imobiliário, Automóvel e E-commerce (OLX, Standvirtual, AliExpress, etc).",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "modules/storage.js", 
        "modules/ui.js", 
        "modules/bot_detect.js", 
        "modules/trust_manager.js", 
        "modules/behavior_tracker.js", 
        "modules/ad_analyzer.js", 
        "modules/sites/general.js",
        "modules/sites/shopping.js",
        "modules/sites/automotive.js",
        "modules/sites/real_estate.js",
        "content.js"
      ],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/content.css", "modules/ui.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Anti-Scam Status"
  },
  "icons": {
      
  }
}
